<!-- Modal Structure -->
<div id="new-patient-form" class="modal">
  <div class="modal-content">
    <h4>Nuevo paciente</h4>
    <div class="row">
      <form class="" action="<%= new_patient_path() %>" method="post">
        <div class="row">
          <div class="input-field col m6 s12">
            <label for="">Nombre</label><br />
            <input type="text" name="first_name" id="first_name" class="validate" data-validation="required">
          </div>
          <div class="input-field col m6 s12">
            <label for="">Apellido</label><br />
            <input type="text" name="last_name" id="last_name" class="validate" data-validation="required">
          </div>
        </div>
        <div class="row">
          <div class="input-field col m6 s12">
            <label for="">Email</label><br />
            <input type="email" name="email" id="email" class="validate" data-validation="required email">
          </div>
          <div class="input-field col m6 s12">
            <label for="">Teléfono</label><br />
            <input type="text" name="phone" id="phone" class="validate">
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <label for="">Dirección</label><br />
            <input type="text" name="address" id="address" class="validate">
            <input type="hidden" name="role" id="role" value="patient">
          </div>
        </div>
        <div class="row">
          <div class="actions col s12">
            <button type="submit" name="button" class="btn cyan waves-effect waves-light right">Guardar</button>
          </div>
        </div>
      </form>
    </div>
  </div>
  <div class="modal-footer">
    <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Cancelar</a>
  </div>
</div>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery-form-validator/2.3.26/jquery.form-validator.min.js"></script>
<script type="text/javascript">
  $.validate({
    lang: 'es'
  });
</script>
